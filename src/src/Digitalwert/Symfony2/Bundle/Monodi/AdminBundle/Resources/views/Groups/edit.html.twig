{% extends 'DigitalwertMonodiAdminBundle::base.html.twig' %}

{% block headline %}Gruppenverwaltung{% endblock headline %}


{% block content_content %}
    <h1>Gruppe bearbeiten</h1>
    
    {% for key, message in app.session.getFlashes() %}
    <div class="{{ key }}">
      {{ message|trans({}, 'FOSUserBundle') }}
    </div>
    {% endfor %}
    
    <form
      class="form-horizontal" 
      id="groupFormEdit" 
      action="{{ path('groups_update', { 'id': group.id }) }}" 
      method="POST" 
      {{ form_enctype(edit_form) }}
    >
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Speichern</button>
            <button type="reset" class="btn">Abbrechen</button>
        </div>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('groups') }}">
                Zurück zur Übersicht
            </a>
        </li>
        <li>
            <form action="{{ path('groups_delete', { 'id': group.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
