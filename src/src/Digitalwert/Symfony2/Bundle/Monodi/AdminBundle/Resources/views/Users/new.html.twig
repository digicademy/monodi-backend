{% extends 'DigitalwertMonodiAdminBundle::base.html.twig' %}

{% block headline %}Nutzerverwaltung{% endblock headline %}


{% block content_content %}
    <h1>Nutzererstellung</h1>
    
    <form
      class="form-horizontal" 
      id="userFormNew" 
      action="{{ path('users_create') }}" 
      method="post" 
      {{ form_enctype(form) }}
    >
        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Speichern</button>
            <button type="reset" class="btn">Abbrechen</button>
        </div>
    </form>

    <ul class="record_actions">
    <li>
        <a class="btn" href="{{ path('users') }}">
            Zurück zur Übersicht
        </a>
    </li>
</ul>
{% endblock content_content %}
