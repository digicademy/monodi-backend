<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="digitalwert_monodi_common.existdb.uri">fabien@example.com</parameter>
        <parameter key="digitalwert_monodi_common.existdb.username">fabien@example.com</parameter>
        <parameter key="digitalwert_monodi_common.existdb.password">fabien@example.com</parameter>
        <parameter key="digitalwert_monodi_common.git.remote.uri"></parameter>
        <parameter key="digitalwert_monodi_common.git.local.base">%kernel.root_dir%/git</parameter>
        <parameter key="digitalwert_monodi_common.git.repositorymanager.class">Digitalwert\Symfony2\Bundle\Monodi\CommonBundle\Utility\Git\RepositoryManager</parameter>
    </parameters>
        
    <services>
        <service id="digitalwert_monodi_common.git.repositorymanager" class="%digitalwert_monodi_common.git.repositorymanager.class%">
            <argument>%digitalwert_monodi_common.git.remote.uri%</argument>
            <argument type="service" id="logger" />           
        </service>
    </services>
    
